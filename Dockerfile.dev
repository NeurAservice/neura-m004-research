FROM node:20-alpine

WORKDIR /app

# Install dependencies for better-sqlite3 and development
RUN apk add --no-cache python3 make g++ sqlite

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev)
RUN npm install

# Copy source
COPY . .

# Create directories
RUN mkdir -p /app/data /app/logs

# Expose port
EXPOSE 3004

# Start in dev mode
CMD ["npm", "run", "dev"]
